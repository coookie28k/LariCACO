<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="laricaco.ui.MeusProdutosController">

    <!-- Barra superior:  ← Voltar |   Meus Produtos   -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding:12;">
            <Button text="← Voltar" onAction="#onVoltar"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="Meus Produtos" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- Centro: grade com os produtos -->
    <center>
        <FlowPane fx:id="produtosPane"
                  hgap="15" vgap="15" prefWrapLength="550"
                  alignment="TOP_CENTER"
                  style="-fx-padding:20;"/>
    </center>

    <!-- Rodapé: botão Adicionar Produto -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding:15;">
            <Button text="Adicionar Produto" onAction="#onAdicionarProduto"/>
        </HBox>
    </bottom>

</BorderPane>
