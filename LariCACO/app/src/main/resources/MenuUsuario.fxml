<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="laricaco.ui.MenuUsuarioController">

    <!-- Top: botão Voltar no canto superior esquerdo -->
    <top>
        <HBox alignment="TOP_LEFT" style="-fx-padding: 10;">
            <Button fx:id="voltarButton" text="← Voltar" onAction="#onVoltar"/>
        </HBox>
    </top>

    <!-- Center: botoes centralizados em VBox -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20px;">
            <!-- Linha 1: Comprar e Vender -->
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="comprarButton" text="Comprar" onAction="#onComprar" prefWidth="120" prefHeight="40"/>
                <Button fx:id="venderButton" text="Vender" onAction="#onVender" prefWidth="120" prefHeight="40"/>
            </HBox>

            <!-- Linha 2: Meus Dados e Deslogar -->
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="meusDadosButton" text="Meus Dados" onAction="#onMeusDados" prefWidth="120" prefHeight="40"/>
                <Button fx:id="deslogarButton" text="Deslogar" onAction="#onDeslogar" prefWidth="120" prefHeight="40"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
