<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="laricaco.ui.VenderController">

    <!-- Topo – botão Voltar -->
    <top>
        <HBox alignment="TOP_LEFT" style="-fx-padding: 12;">
            <Button text="← Voltar" onAction="#onVoltar"/>
        </HBox>
    </top>

    <!-- Centro – dois botões -->
    <center>
        <VBox alignment="CENTER" spacing="25">
            <Button text="Meus Produtos"  prefWidth="180" prefHeight="45"
                    onAction="#onMeusProdutos"/>
            <Button text="Minhas Vendas"  prefWidth="180" prefHeight="45"
                    onAction="#onMinhasVendas"/>
        </VBox>
    </center>

</BorderPane>
