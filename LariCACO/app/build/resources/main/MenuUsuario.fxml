<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane style="-fx-background-color: #FFFDF6;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="laricaco.controller.MenuUsuarioController">

    <!-- Top: botão Voltar no canto superior esquerdo -->
    <top>
        <HBox alignment="TOP_LEFT" style="-fx-padding: 10;">
            <Button fx:id="voltarButton" onAction="#onVoltar" style="-fx-background-color: DDEB9D; -fx-border-color: A4B465;" text="← Voltar" textFill="#626f47" />
        </HBox>
    </top>

    <!-- Center: botoes centralizados em VBox -->
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20px;">
            <!-- Linha 1: Comprar e Vender -->
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="comprarButton" onAction="#onComprar" prefHeight="40" prefWidth="120" style="-fx-background-color: DDEB9D; -fx-border-color: A4B465;" text="Comprar" textFill="#626f47" />
                <Button fx:id="venderButton" onAction="#onVender" prefHeight="40" prefWidth="120" style="-fx-background-color: DDEB9D; -fx-border-color: A4B465;" text="Vender" textFill="#626f47" />
            </HBox>

            <!-- Linha 2: Meus Dados e Deslogar -->
            <HBox alignment="CENTER" spacing="15">
                <Button fx:id="meusDadosButton" onAction="#onMeusDados" prefHeight="40" prefWidth="120" style="-fx-background-color: DDEB9D; -fx-border-color: A4B465;" text="Meus Dados" textFill="#626f47" />
                <Button fx:id="deslogarButton" onAction="#onDeslogar" prefHeight="40" prefWidth="120" style="-fx-background-color: DDEB9D; -fx-border-color: A4B465;" text="Deslogar" textFill="#626f47" />
            </HBox>
        </VBox>
    </center>

</BorderPane>
