<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="laricaco.ui.CarrinhoController">

    <!-- Topo com botão Voltar -->
    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Button text="← Voltar" onAction="#onVoltar"/>
        </HBox>
    </top>

    <!-- Centro com tabela de itens -->
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <!-- Cabeçalho dos itens -->
            <GridPane hgap="10" vgap="5">
                <columnConstraints>
                    <ColumnConstraints percentWidth="40"/>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="20"/>
                    <ColumnConstraints percentWidth="20"/>
                </columnConstraints>

                <Label text="Nome" GridPane.columnIndex="0"/>
                <Label text="Quantidade" GridPane.columnIndex="1"/>
                <Label text="Preço" GridPane.columnIndex="2"/>
                <Label text="Ação" GridPane.columnIndex="3"/>
            </GridPane>

            <!-- Lista de itens -->
            <VBox fx:id="itensBox" spacing="5"/>
        </VBox>
    </center>

    <!-- Rodapé com total -->
    <bottom>
        <VBox spacing="5" style="-fx-padding: 10;">
            <!-- Linha do subtotal -->
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Label text="Subtotal:"/>
                <Label fx:id="subtotalLabel"/>
            </HBox>

            <!-- Linha do botão Continuar Compra -->
            <HBox alignment="CENTER">
                <Button text="Continuar Compra" onAction="#onContinuarCompra"/>
            </HBox>
        </VBox>
    </bottom>


</BorderPane>
