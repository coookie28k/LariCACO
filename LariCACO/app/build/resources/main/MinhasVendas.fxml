<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
            fx:controller="laricaco.ui.MinhasVendasController">

    <!-- TOPO: Voltar + Título -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10;">
            <Button fx:id="voltarButton" text="← Voltar" onAction="#onVoltar"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label fx:id="tituloLabel" text="Minhas Vendas" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            
            <Pane HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>

    <!-- CENTRO: Filtro + Lista de Vendas -->
    <center>
        <VBox spacing="15" alignment="TOP_CENTER" style="-fx-padding: 20;">
            <!-- Filtros por data -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="De:"/>
                <DatePicker fx:id="dataInicioPicker"/>
                <Label text="até"/>
                <DatePicker fx:id="dataFimPicker"/>
                <Button text="Filtrar" onAction="#onFiltrar"/>
            </HBox>

            <!-- Lista de vendas -->
            <VBox fx:id="vendasContainer" spacing="10" style="-fx-padding: 10;" />

        </VBox>
    </center>

    <!-- BOTTOM: Total -->
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10 20 10 0;">
            <Label text="Faturamento do período:"/>
            <Label fx:id="faturamentoLabel" style="-fx-font-weight: bold;"/>
        </HBox>
    </bottom>

</BorderPane>